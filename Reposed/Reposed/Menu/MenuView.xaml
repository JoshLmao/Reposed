<UserControl x:Class="Reposed.Menu.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reposed.Menu"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignWidth="1000">
    <Menu>
        <MenuItem Header="File">
            <Separator />
            <MenuItem Header="Close" cal:Message.Attach="[Event Click] = [Action OnCloseApplication()]"/>
        </MenuItem>
        <MenuItem Header="Tools">
            <MenuItem Header="Preferences" cal:Message.Attach="[Event Click] = [Action OnOpenPreferences()]">
            </MenuItem>   
        </MenuItem>
    </Menu>
</UserControl>
